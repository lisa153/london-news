{% macro menu_links(items, attributes, menu_level) %}
  {% import _self as menus %}
  {% if items %}
    <nav class="ln-nav">
      <ul {{ attributes }} >
        {% for item in items %}
          <li {{ item.attributes }}>
            {{ link(item.title, item.url) }}
          </li>
        {% endfor %}
      </ul>
    </nav>
  {% endif %}
{% endmacro %}
